<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="handlers"
                  type="br.com.nautilustar.quizsurvival.features.questions.screens.game.QuestionHandler"/>

        <variable name="questionModel"
                  type="br.com.nautilustar.domain.model.QuestionModel"/>
    </data>
    <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/txt_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{questionModel.question}"/>

        <RadioGroup
                android:layout_marginTop="16dp"
                android:layout_below="@id/txt_question"
                android:id="@+id/container_group_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <CheckedTextView
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{questionModel.a}"/>

            <CheckedTextView
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{questionModel.b}"/>

            <CheckedTextView
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{questionModel.c}"/>

            <CheckedTextView
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{questionModel.d}"/>
        </RadioGroup>
    </RelativeLayout>
</layout>