<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable name="viewModel"
                  type="br.com.nautilustar.quizsurvival.features.questions.viewmodel.QuestionViewModel"/>

        <variable name="questionModel"
                  type="br.com.nautilustar.domain.model.QuestionModel"/>
    </data>
    <RelativeLayout
            android:padding="16dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:id="@+id/txt_question"
                android:layout_width="wrap_content"
                tools:text="PERGUNTA"
                android:layout_height="wrap_content"
                android:text="@{questionModel.question}"/>

        <RadioGroup
                android:layout_marginTop="16dp"
                android:layout_below="@id/txt_question"
                android:id="@+id/container_group_answer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <CheckedTextView
                    tools:text="Alternativa A"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{questionModel.a}"/>

            <CheckedTextView
                    tools:text="Alternativa B"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{questionModel.b}"/>

            <CheckedTextView
                    tools:text="Alternativa C"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{questionModel.c}"/>

            <CheckedTextView
                    tools:text="Alternativa D"
                    android:layout_margin="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{questionModel.d}"/>
        </RadioGroup>

        <androidx.appcompat.widget.AppCompatButton
                android:layout_below="@id/container_group_answer"
                android:layout_marginTop="8dp"
                android:id="@+id/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PrÃ³xima"
                android:onClick="@{() -> viewModel.input.next()}"
        />
    </RelativeLayout>
</layout>